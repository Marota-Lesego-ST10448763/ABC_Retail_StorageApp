<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* === Sage Green Global Theme === */
        body {
            background: linear-gradient(135deg, #e8efe9 0%, #d8e3dc 100%);
            color: #2f3e35;
            font-family: 'Segoe UI', Roboto, sans-serif;
            min-height: 100vh;
        }

        /* === Navbar === */
        .navbar {
            background: linear-gradient(90deg, #8bad88, #a8c4a2);
            box-shadow: 0 4px 12px rgba(80, 100, 80, 0.3);
        }

        .navbar-brand {
            color: #2f3e35 !important;
            font-weight: 700;
            font-size: 1.3rem;
            transition: all 0.3s ease;
        }

            .navbar-brand:hover {
                color: #5a7052 !important;
                transform: translateY(-2px);
            }

        .nav-link {
            color: #2f3e35 !important;
            font-weight: 500;
            margin: 0 0.4rem;
            transition: all 0.3s ease;
            border-radius: 8px;
            padding: 0.5rem 0.9rem;
        }

            .nav-link:hover, .nav-link.active {
                background: rgba(255, 255, 255, 0.4);
                color: #5a7052 !important;
                transform: translateY(-2px);
            }

        .navbar-toggler {
            border: none;
            background-color: rgba(255, 255, 255, 0.3);
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* === Main Container === */
        main {
            padding: 2rem;
        }

        /* === Alerts === */
        .alert {
            border-radius: 12px;
            backdrop-filter: blur(8px);
            border: 1px solid rgba(125, 150, 125, 0.4);
            box-shadow: 0 4px 16px rgba(90, 112, 82, 0.25);
            animation: fadeInDown 0.4s ease;
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(168, 196, 162, 0.3), rgba(139, 173, 136, 0.2));
            color: #2f3e35;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(228, 124, 124, 0.25), rgba(214, 103, 103, 0.25));
            color: #4a2f2f;
        }

        .alert i {
            margin-right: 0.4rem;
        }

        .btn-close {
            filter: invert(0.6);
            transition: all 0.3s ease;
        }

            .btn-close:hover {
                transform: rotate(90deg);
                filter: invert(0.2);
            }

        /* === Footer === */
        footer {
            background: rgba(255, 255, 255, 0.7);
            border-top: 1px solid rgba(125, 150, 125, 0.3);
            text-align: center;
            color: #2f3e35;
            font-size: 0.9rem;
            box-shadow: 0 -4px 12px rgba(90, 112, 82, 0.1);
        }

            footer .row {
                justify-content: center;
            }

        /* === Animations === */
        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-seedling"></i> ABC Retailers
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">
                                <i class="fas fa-users"></i> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Upload" asp-action="Index">
                                <i class="fas fa-upload"></i> Upload Files
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-3">
        <div class="container">
            <div class="row">
                <p>© @DateTime.Now.Year ABC Retailers. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
